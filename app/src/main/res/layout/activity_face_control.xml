<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фотоконтроль"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- ImageView для отображения сделанного снимка -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:contentDescription="Снимок с камеры"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка для запуска камеры -->
    <Button
        android:id="@+id/btnStartCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сделать селфи"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Текстовое поле для вывода результата фотоконтроля -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат фотоконтроля будет здесь"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
