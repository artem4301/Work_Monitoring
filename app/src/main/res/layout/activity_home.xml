<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:background="#E0E0E0" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="16dp"
        android:text="Выбрать изображение" />

    <Button
        android:id="@+id/btnSaveEmbeddings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSelectImage"
        android:layout_marginTop="16dp"
        android:text="Сохранить эмбеддинги" />

    <Button
        android:id="@+id/btnOnWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSaveEmbeddings"
        android:layout_marginTop="16dp"
        android:text="На работе" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnOnWork"
        android:layout_marginTop="16dp"
        android:text="Выйти из аккаунта" />

</RelativeLayout>
