<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:title="Work Monitoring"
        app:titleTextColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logged-in user email -->
    <TextView
        android:id="@+id/userEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@example.com"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Face preview -->
    <ImageView
        android:id="@+id/facePreviewImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_border"
        app:layout_constraintTop_toBottomOf="@id/userEmailTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Select face image button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelectFaceImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Face Image"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/facePreviewImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Save face embeddings button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveFaceEmbeddings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Face Embeddings"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnSelectFaceImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Start face control button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartFaceControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Face Control"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnSaveFaceEmbeddings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Logout button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAllCaps="true"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/btnStartFaceControl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
